\begin{tikzpicture}[scale=0.8]

\node[] at (0,0) {$\Huge \varnothing$};
\node[above] at (0,0.5){空二叉树};

\node[ball color=red!70,circle,text=white] at (2.5,0) {A};
\node[above,text width=1.5cm] at (2.5,0.5){单结点二叉树};


\node[ball color=red!70,circle,text=white] at (6,0) {A}  
  child {node[rectangle,draw]{} }
  child[fill=none] {edge from parent[draw=none]};  
\node[above,text width=1.5cm] at (6,0.5){右子树为空};

\node[ball color=red!70,circle,text=white] at (9,0) {A}
  child[fill=none] {edge from parent[draw=none]}
  child {node[rectangle,draw]{} };
\node[above,text width=1.5cm] at (9,0.5){左子树为空};

\node[ball color=red!70,circle,text=white] at (12,0) {A}
  child {node[rectangle,draw]{} }
  child {node[rectangle,draw]{} };  
\node[above,text width=1.5cm] at (12,0.5){左、右子树都不空};

\end{tikzpicture}
\caption{二叉树的5种基本形态}
\end{figure}
